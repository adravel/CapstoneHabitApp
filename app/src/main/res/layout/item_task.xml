<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_title_placeholder"
            android:textColor="@color/dark_1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_area_placeholder"
            android:textColor="@color/dark_2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/time_limit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_time_limit_placeholder"
            android:textColor="@color/dark_2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_status_placeholder"
            android:textColor="@color/state_success"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

