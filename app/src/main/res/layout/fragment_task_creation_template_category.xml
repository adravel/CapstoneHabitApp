<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/task_repetition_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/template_task_repetition"
                android:textColor="@color/dark_1"
                style="@style/body_medium_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/task_onetime_card"
                android:layout_width="156dp"
                android:layout_height="77dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_repeatedly_card"
                app:layout_constraintTop_toBottomOf="@id/task_repetition_title"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/task_onetime_card_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/img_onetime_repetition"/>

                    <TextView
                        android:id="@+id/task_onetime_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onetime_repetition"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintStart_toEndOf="@id/task_onetime_card_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="14dp"/>

                    <TextView
                        android:id="@+id/task_onetime_card_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repetition_choose_day"
                        style="@style/body_small"
                        android:textColor="@color/state_error_dark"
                        app:layout_constraintStart_toStartOf="@id/task_onetime_card_title"
                        app:layout_constraintTop_toBottomOf="@id/task_onetime_card_title"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/task_repeatedly_card"
                android:layout_width="156dp"
                android:layout_height="77dp"
                app:layout_constraintStart_toEndOf="@id/task_onetime_card"
                app:layout_constraintTop_toTopOf="@id/task_onetime_card"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/task_repeatedly_card_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/img_repeated_repetition"/>

                    <TextView
                        android:id="@+id/task_repeatedly_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repeated_repetition"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintStart_toEndOf="@id/task_repeatedly_card_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="14dp"/>

                    <TextView
                        android:id="@+id/task_repeatedly_card_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repetition_choose_day"
                        style="@style/body_small"
                        android:textColor="@color/state_error_dark"
                        app:layout_constraintStart_toStartOf="@id/task_repeatedly_card_title"
                        app:layout_constraintTop_toBottomOf="@id/task_repeatedly_card_title"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/task_category_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/template_task_category"
                android:textColor="@color/dark_1"
                style="@style/body_medium_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_onetime_card"
                android:layout_marginTop="30dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/creativity_category_card"
                android:layout_width="156dp"
                android:layout_height="156dp"
                app:layout_constraintEnd_toStartOf="@+id/housework_category_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_category_title"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/creativity_category_card_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/img_category_kreativitas"/>

                    <TextView
                        android:id="@+id/creativity_category_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creativity"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/creativity_category_card_icon"
                        android:layout_marginTop="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/housework_category_card"
                android:layout_width="156dp"
                android:layout_height="156dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/creativity_category_card"
                app:layout_constraintTop_toTopOf="@id/creativity_category_card"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/housework_category_card_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/img_category_kebersihan"/>

                    <TextView
                        android:id="@+id/housework_category_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/house_work"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/housework_category_card_icon"
                        android:layout_marginTop="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/health_category_card"
                android:layout_width="156dp"
                android:layout_height="156dp"
                app:layout_constraintStart_toStartOf="@id/creativity_category_card"
                app:layout_constraintTop_toBottomOf="@+id/creativity_category_card"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/health_category_card_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/img_category_kesehatan"/>

                    <TextView
                        android:id="@+id/health_category_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/health"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/health_category_card_icon"
                        android:layout_marginTop="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/selfcare_category_card"
                android:layout_width="156dp"
                android:layout_height="156dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/health_category_card"
                app:layout_constraintTop_toTopOf="@id/health_category_card"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:focusable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/selfcare_category_card_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/img_category_kerapihan"/>

                    <TextView
                        android:id="@+id/selfcare_category_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/self_care"
                        style="@style/body_large_2"
                        android:textColor="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selfcare_category_card_icon"
                        android:layout_marginTop="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/create_task_manual_button"
                style="@style/outline_button"
                android:layout_width="0dp"
                android:layout_marginTop="40dp"
                android:text="@string/button_label_create_task_manual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/health_category_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>