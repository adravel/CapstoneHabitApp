<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_4"
    tools:context=".ui.TaskCreationFragment">

    <TextView
        android:id="@+id/task_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/task_title_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Type something"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title_text" />

    <TextView
        android:id="@+id/task_area_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title_edit_text" />

    <EditText
        android:id="@+id/task_area_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Type something"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_area_text" />

    <TextView
        android:id="@+id/task_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_difficulty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_area_edit_text" />

    <EditText
        android:id="@+id/task_difficulty_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Type something"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_difficulty_text" />

    <TextView
        android:id="@+id/task_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_difficulty_edit_text" />

    <TextView
        android:id="@+id/day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_time_text" />

    <LinearLayout
        android:id="@+id/day_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_text">

        <CheckBox
            android:id="@+id/day_1_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sn" />

        <CheckBox
            android:id="@+id/day_2_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sl" />

        <CheckBox
            android:id="@+id/day_3_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ra" />

        <CheckBox
            android:id="@+id/day_4_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ka" />

        <CheckBox
            android:id="@+id/day_5_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ju" />

        <CheckBox
            android:id="@+id/day_6_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sb" />

        <CheckBox
            android:id="@+id/day_7_check_box"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mi" />

    </LinearLayout>

    <TextView
        android:id="@+id/task_time_limit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_time_limit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_layout" />

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_time_limit_text" />

    <EditText
        android:id="@+id/task_start_time_limit_edit_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/start_text"
        app:layout_constraintTop_toBottomOf="@+id/task_time_limit_text" />

    <TextView
        android:id="@+id/finish_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        app:layout_constraintStart_toEndOf="@+id/task_start_time_limit_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/task_time_limit_text" />

    <EditText
        android:id="@+id/task_finish_time_limit_edit_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/finish_text"
        app:layout_constraintTop_toBottomOf="@+id/task_time_limit_text" />

    <TextView
        android:id="@+id/task_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_start_time_limit_edit_text" />

    <EditText
        android:id="@+id/task_detail_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type something"
        android:inputType="text|textMultiLine"
        android:lines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_detail_text" />

    <Button
        android:id="@+id/create_task_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_button_background_color"
        android:text="@string/button_label_create_task"
        android:textColor="@color/light_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_detail_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>